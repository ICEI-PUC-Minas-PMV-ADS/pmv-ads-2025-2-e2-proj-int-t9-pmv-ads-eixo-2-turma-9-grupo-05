@model EcoTrash.Models.Pesagem

@{
    ViewData["Title"] = "Excluir Pesagem";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Atenção!</h4>
        <p>Você tem certeza que deseja excluir esta pesagem?</p>
        <hr>
        <p class="mb-0">Esta ação não pode ser desfeita.</p>
    </div>

    <div class="card">
        <div class="card-header">
            <h4>Dados da Pesagem</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Tipo de Material:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoMaterial)</dd>

                <dt class="col-sm-3">Peso:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Peso) kg</dd>

                <dt class="col-sm-3">Localização:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Localizacao)</dd>

                <dt class="col-sm-3">Data de Cadastro:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DataCadastro)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()

        <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>