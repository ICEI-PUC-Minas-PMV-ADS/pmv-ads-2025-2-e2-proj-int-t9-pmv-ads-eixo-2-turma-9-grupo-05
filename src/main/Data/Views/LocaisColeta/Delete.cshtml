@model EcoTrash.Models.LocalColeta

@{
    ViewData["Title"] = "Excluir Local de Coleta";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">
            <i class="fas fa-exclamation-triangle me-2"></i>Atenção!
        </h4>
        <p>Você tem certeza que deseja excluir este local de coleta?</p>
        <hr>
        <p class="mb-0">Esta ação não pode ser desfeita.</p>
    </div>

    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="card-title mb-0">
                <i class="fas fa-map-marker-alt me-2"></i>@Model.Cidade - @Model.Estado
            </h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Endereço:</dt>
                <dd class="col-sm-9">@Model.EnderecoCompleto()</dd>

                <dt class="col-sm-3">Data de Cadastro:</dt>
                <dd class="col-sm-9">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash me-2"></i>Confirmar Exclusão
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Cancelar
            </a>
        </div>
    </form>
</div>