@model EcoTrash.Controllers.AnalyticsViewModel

@{
    ViewData["Title"] = "Dashboard Analítico";
}

<div class="container">
    <h2 class="mb-4">
        <i class="fas fa-chart-line me-2"></i>@ViewData["Title"]
    </h2>

    <!-- Métricas Principais -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalPesoReciclado.ToString("F2") kg</h3>
                    <p class="mb-0">Total Reciclado</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>@Model.MediaPesoPorPesagem.ToString("F2") kg</h3>
                    <p class="mb-0">Média por Pesagem</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>@Model.TopMateriais.Count</h3>
                    <p class="mb-0">Tipos de Materiais</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row">
        <div class="col-md-8 mb-4">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="card-title mb-0">Evolução Mensal</h5>
                </div>
                <div class="card-body">
                    <canvas id="evolucaoChart" height="250"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="card-title mb-0">Top Materiais</h5>
                </div>
                <div class="card-body">
                    <canvas id="topMateriaisChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela de Estatísticas -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="card-title mb-0">Estatísticas Detalhadas por Material</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Material</th>
                                    <th>Peso Total (kg)</th>
                                    <th>Quantidade</th>
                                    <th>Média por Item</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var material in Model.TopMateriais)
                                {
                                    <tr>
                                        <td>@material.Material</td>
                                        <td>@material.Total.ToString("F2")</td>
                                        <td>@material.Quantidade</td>
                                        <td>@((material.Total / material.Quantidade).ToString("F2")) kg</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Evolução Mensal
        const evolucaoCtx = document.getElementById('evolucaoChart').getContext('2d');
        new Chart(evolucaoCtx, {
            type: 'bar',
            data: {
                labels: [@Html.Raw(string.Join(", ", Model.EvolucaoMensal.Select(e => $"'{e.MesAno}'")))],
                datasets: [
                    {
                        label: 'Peso Total (kg)',
                        data: [@string.Join(", ", Model.EvolucaoMensal.Select(e => e.PesoTotal))],
                        backgroundColor: 'rgba(54, 162, 235, 0.8)',
                        yAxisID: 'y'
                    },
                    {
                        label: 'Quantidade',
                        data: [@string.Join(", ", Model.EvolucaoMensal.Select(e => e.Quantidade))],
                        type: 'line',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        backgroundColor: 'rgba(255, 99, 132, 0.1)',
                        yAxisID: 'y1'
                    }
                ]
            },
            options: {
                responsive: true,
                interaction: {
                    mode: 'index',
                    intersect: false,
                },
                scales: {
                    y: {
                        type: 'linear',
                        display: true,
                        position: 'left',
                    },
                    y1: {
                        type: 'linear',
                        display: true,
                        position: 'right',
                        grid: {
                            drawOnChartArea: false,
                        },
                    }
                }
            }
        });

        // Top Materiais
        const topMateriaisCtx = document.getElementById('topMateriaisChart').getContext('2d');
        new Chart(topMateriaisCtx, {
            type: 'pie',
            data: {
                labels: [@Html.Raw(string.Join(", ", Model.TopMateriais.Select(m => $"'{m.Material}'")))],
                datasets: [{
                    data: [@string.Join(", ", Model.TopMateriais.Select(m => m.Total))],
                    backgroundColor: [
                        '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF',
                        '#FF9F40', '#FF6384', '#C9CBCF', '#4BC0C0', '#FF6384'
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}