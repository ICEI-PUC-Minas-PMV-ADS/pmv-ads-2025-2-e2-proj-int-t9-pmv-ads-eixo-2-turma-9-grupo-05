@model EcoTrash.Models.Empresa

@{
    ViewData["Title"] = "Detalhes da Empresa";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <div class="card">
        <div class="card-header">
            <h4>Informações da Empresa</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">CNPJ:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CNPJ)</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">Telefone:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefone)</dd>

                <dt class="col-sm-3">Endereço:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Endereco)</dd>

                <dt class="col-sm-3">Data de Cadastro:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DataCadastro)</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    @if (Model.Ativo)
                    {
                        <span class="badge bg-success">Ativo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inativo</span>
                    }
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
        </div>
    </div>
</div>